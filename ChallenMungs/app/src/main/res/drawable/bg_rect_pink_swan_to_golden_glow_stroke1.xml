<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list android:shape="rectangle">
            <item android:left="-10dp" android:right="-10dp" android:top="-10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/pink_swan" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list android:shape="rectangle">
            <item android:left="-10dp" android:right="-10dp" android:top="-10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/golden_glow" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>