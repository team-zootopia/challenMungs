<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_white_radius10"
        android:paddingHorizontal="36dp"
        android:paddingVertical="36dp">

        <include
            android:id="@+id/fm_donation_certificate"
            layout="@layout/fragment_donation_certificate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/fm_donation_certificate"
            app:layout_constraintStart_toStartOf="@id/fm_donation_certificate"
            app:layout_constraintTop_toBottomOf="@id/fm_donation_certificate">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_donation_certificate_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_rect_gainsboro_white_radius5_stroke1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:text="@string/content_close"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_donation_certificate_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rect_golden_glow_radius5"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:text="@string/content_save"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
